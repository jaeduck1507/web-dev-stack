<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.ArticleDAO">

    <!--전체 게시글 조회-->
    <select id="selectAll" resultType="avo">
        select * from article
    </select>

    <!--게시글 상세보기-->
    <select id="showView" resultType="avo"
            parameterType="Integer">

        select * from article where id=#{id}

    </select>

    <!--새 글 작성-->
    <insert id="newArticle"
            parameterType="avo">

        insert into article( title, description, created, updated, member_id )
        values( #{title}, #{description}, NOW(), NOW(), #{member_id} )

    </insert>

    <!--삭제-->
    <delete id="deleteArticle"
            parameterType="Integer">

        delete from article where id=#{id}

    </delete>

    <update id="updateFin" parameterType="avo">
        update article
        set title = #{title},
        description = #{description},
        updated = NOW()
        where id = #{id}
    </update>

</mapper>












